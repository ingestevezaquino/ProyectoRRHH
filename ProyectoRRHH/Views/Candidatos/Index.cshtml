@model IEnumerable<ProyectoRRHH.Models.candidato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salarioaspira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.recomendadopor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.competencias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.capacitacionesNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.departamentoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.explaboralNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.puestoaspiraNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salarioaspira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recomendadopor)
            </td>
            <td>
                @{ var competencias = String.Join(", ", item.competencias.Select(x => x.descripcion).ToArray()); }
                @Html.DisplayFor(modelItem => competencias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.capacitacionesNavigation.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departamentoNavigation.departamento1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.explaboralNavigation.empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puestoaspiraNavigation.nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
