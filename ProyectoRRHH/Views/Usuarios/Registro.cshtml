@model RegistroViewModel
@{
    ViewData["Title"] = "Registro";
}

<h1>Registro</h1>

<form asp-action="Registro">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Passsword" class="form-label"></label>
        <input asp-for="Passsword" class="form-control" />
        <span asp-validation-for="Passsword" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Registrate</button>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}